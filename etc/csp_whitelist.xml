<?xml version="1.0" encoding="UTF-8"?>
<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="connect_facebook_net" type="host">connect.facebook.net</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="facebook_com" type="host">www.facebook.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
